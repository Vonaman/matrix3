
<div class="absolute left-0 top-[20%] bg-green-800 h-[60%] p-8 w-60 transition-all duration-500" :class="open ? 'translate-x-0' : 'translate-x-[-240px]'" x-transition x-transition.duration.500ms x-data="{ open: false }">
    <div class="relative">
        <div class="flex flex-col gap-4">
            <h2>
                Liste d'agents suspects
            </h2>
            <ul>
                {%for agent in agents %}
                    <li class="text-white">
                        {{ agent.name }}
                    </li>
                {% endfor %}
            </ul>
        </div>
        <button class="absolute bg-green-800 px-4 py-4 right-[-79px] top-8 hover:cursor-pointer" @click="open = !open">
            <div class="flex flex-col gap-2 transition-all duration-500" :class="open ? 'rotate-180' : ''" x-transition x-transition.duration.500ms>
                <span class='block relative bg-white w-4 h-[2px] rotate-45'></span>
                <span class='block bg-white w-4 h-[2px] rotate-[-45deg]'></span>
            </div>
        </button>
    </div>
</div>

<div class="absolute right-[10%] bottom-0 bg-green-800 h-72 p-8 w-auto transition-all duration-500 flex flex-col gap-8" :class="open ? 'translate-y-0' : 'translate-y-72'" x-transition x-transition.duration.500ms x-data="{ open: false }">
    <h1 class="text-white text-2xl">Processus d'innocentement</h1>
    {% if agents|length > 0 %}
        <form action="{{ path('app_eliminate_agent') }}" method="post" class="flex flex-col justify-between h-full items-center">
            <select name="agent_id" class="p-2 rounded bg-white">
                <option value="" selected disabled>Choissisez un agent</option>
                {% for agent in agents %}
                    <option value="{{ agent.id }}">{{ agent.name }}</option>
                {% endfor %}
            </select>
            <button type="submit" class="btn">
                Gracier l'agent
            </button>
            <div class="absolute bg-red-500 h-60 w-60 top-[-500px] left-[-500px]">
            
            </div>
        </form>
    {% endif %}

    <button class="absolute bg-green-800 px-4 py-4 left-[42.5%] top-[-32px] hover:cursor-pointer" @click="open = !open">
        <div class="flex transition-all duration-500" :class="open ? 'rotate-180' : ''" x-transition x-transition.duration.500ms>
            <span class='block relative bg-white w-4 h-[2px] rotate-[-45deg] left-[3px]'></span>
            <span class='block relative bg-white w-4 h-[2px] rotate-45 right-[3px]'></span>
        </div>
    </button>
</div>


