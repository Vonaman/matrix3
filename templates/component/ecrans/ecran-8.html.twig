    <p class="absolute text-[#20E820] text-lg top-4 left-16"
        x-data="{ 
                visible: true, 
                showTime: 1000,   // durée visible (1s)
                hideTime: 6000,   // durée cachée (3s)
                toggle() {
                    this.visible = true;
                    setTimeout(() => {
                        this.visible = false;
                    }, this.showTime);
                }
            }"
        x-init="
                toggle();
                setInterval(() => { toggle() }, showTime + hideTime)
        "
        x-show="visible"
        x-transition>
            9
